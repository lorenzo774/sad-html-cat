{
    "compilerOptions": {
        "target": "Es2022",
        "useDefineForClassFields": true,
        "module": "Es2022",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
